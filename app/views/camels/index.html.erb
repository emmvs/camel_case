<h1 class="font-alpha">🐫 Here are our Amazing Camels 🐫</h1>

<div class="flex-container">
  <div class="camels-grid">
          <% @camels.each do |camel| %>
            <%= link_to camel_path(camel), class: "camel-link" do %>
              <div class="camel-card">
                <%= cl_image_tag camel.photo.key, height: 300, width: 300, crop: :fill, class: "camel-photo" %>
                <div class="camel-info">
                  <p class="camel_city"><svg style="width:24px;height:24px" viewBox="0 0 24 24">
    <path fill="currentColor" d="M12,11.5A2.5,2.5 0 0,1 9.5,9A2.5,2.5 0 0,1 12,6.5A2.5,2.5 0 0,1 14.5,9A2.5,2.5 0 0,1 12,11.5M12,2A7,7 0 0,0 5,9C5,14.25 12,22 12,22C12,22 19,14.25 19,9A7,7 0 0,0 12,2Z" />
</svg>&nbsp;<%= camel.city %></p>
                  <h3 class="camel_title font-delta"><%= camel.name %></h3>
                  <p class="camel_type"><%= camel.camel_type %></p>
                  <p class="camel_age"><span class="age-note"><%= camel.age%></span> years old</p>
                  <p class="camel_price"><%= humanized_money_with_symbol(camel.price) %></p>
                </div>
              </div>
            <% end %>
          <% end %>
  </div>
</div>
