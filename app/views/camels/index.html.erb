<h1>🐫 Here are our Amazing Camels 🐫</h1>

<div class="flex-container">
  <div class="camels-grid">
          <% @camels.each do |camel| %>
            <div class="camel-card">
            <p><%= link_to "#{camel.name}", camel_path(camel), class: "camel_link" %></p>
            <p><%= camel.age %></p>
            <p><%= humanized_money_with_symbol(camel.price) %></p>
            <p><%= camel.city %></p>
            <%= cl_image_tag camel.photo.key, height: 300, width: 300, crop: :fill, class: "camel-photo" %>
            </div>
          <% end %>
  </div>
</div>
